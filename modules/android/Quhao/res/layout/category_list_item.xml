<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"  android:layout_height="94dp"
	 android:layout_marginTop="3dp" android:id="@+id/frameLayout1">
	<RelativeLayout android:layout_width="fill_parent"
        android:layout_height="94dp"
        android:orientation="vertical" >
	    <ImageView
            android:id="@+id/img"
            android:focusable="false"
            android:layout_width="76dp"
            android:layout_height="93dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/title_img" />
	    <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:paddingLeft="4dp"
            android:paddingTop="10dp" >
            <Button
                android:id="@+id/btnMerchantDetail"
                android:focusable="false"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="详情"
                android:textColor="#666666"
                android:textSize="17sp"
                android:textStyle="bold" />
         </LinearLayout>
         <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/img"
            android:layout_toRightOf="@id/linearLayout1"
            android:orientation="vertical"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/merchantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="国际平面设计联盟（AGI）2012"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/merchantAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="2012年9月1日至10月19日"
                android:textColor="#666666"
                android:textSize="13sp" />
        </LinearLayout>
	</RelativeLayout>
</FrameLayout>
