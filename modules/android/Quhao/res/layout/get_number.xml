<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:id="@+id/root" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#ffffffff"
  xmlns:android="http://schemas.android.com/apk/res/android">
   
    <LinearLayout android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content"    
	    	android:background="@drawable/common_top_bar_bg1"    
	    	android:gravity="center_vertical" 
	    	android:orientation="vertical"
	    	android:paddingBottom="5dip"
	        android:paddingLeft="5dip"
	        android:paddingRight="5dip"
	        android:paddingTop="5dip" >
	    <LinearLayout 
	    	android:id="@+id/loadingbar"
	    		android:orientation="horizontal"
	    		android:layout_width="fill_parent"
	    		android:layout_height="fill_parent"
	    		android:background="#ffffffff"
	    		android:gravity="center"
	   		 	>
	    		
	    		<ProgressBar 
	    			android:layout_width="wrap_content" 
	    			android:layout_height="wrap_content"
	    			/>
	    	
	   			<View 
	   				android:layout_width="10dip" 
	   				android:layout_height="10dip"
	   			/>
	    
	    		<TextView 
	    			android:layout_width="wrap_content" 
	    			android:layout_height="wrap_content"
	    			android:textColor="#ff000000"
	    			android:text="载入中..."
	    		/>
	
		</LinearLayout>
	    <LinearLayout android:id="@+id/merchantNameLayout"
			android:layout_width="fill_parent"    
	    	android:layout_height="wrap_content"    
	    	android:gravity="center_vertical" 
	    	android:visibility="gone" >
	    	<Button android:gravity="left|center" android:id="@+id/back_btn" 
	           	android:layout_width="wrap_content" android:layout_height="wrap_content" 
	            android:background="@drawable/btn_back_background" />
			<TextView android:id="@+id/merchantName"
				android:textAppearance="?android:textAppearanceMedium"
				android:layout_gravity="center_vertical" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="取号"
				android:textColor="#000000"
				/>
		
		</LinearLayout>
	</LinearLayout>
    <FrameLayout android:layout_width="fill_parent"
	    android:layout_height="0.0dip" android:layout_weight="1.0">
		<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true" android:layout_weight="1.0">
            <LinearLayout 
            	android:layout_width="fill_parent" 
            	android:layout_height="fill_parent" 
            	android:background="#ffffffff"
            	android:orientation="vertical">
            	<LinearLayout 
		    		android:gravity="center_vertical" 
		    		android:orientation="horizontal" 
		    		android:padding="10.0dip" 
		    		android:layout_width="fill_parent" 
		    		android:layout_height="wrap_content"
		    		android:background="@drawable/list_item_border"
		    		android:clickable="true"
		  			>
		    		
					<TextView 
		    			android:textAppearance="?android:textAppearanceMedium" 
		    			android:textSize="16.0sp" 
		    			android:layout_width="0.0px" 
		    			android:layout_height="wrap_content" 
		    			android:layout_marginLeft="6.0dip" 
		    			android:maxLines="2" 
		    			android:layout_weight="1.0" 
		    			android:text="座位人数："
		    			android:textColor="#ff000000"
		    			/>
					
					<TextView android:id="@+id/seatNo"
		    			android:textAppearance="?android:textAppearanceMedium" 
		    			android:textSize="16.0sp" 
		    			android:paddingLeft="6.0dip" 
		    			android:layout_width="0.0px" 
		    			android:layout_height="wrap_content" 
		    			android:layout_marginLeft="6.0dip" 
		    			android:maxLines="2" 
		    			android:layout_weight="1.0" 
		    			android:text="1"
		    			android:textColor="#ff000000"
		    			/>
					
					<Button android:gravity="right|center" android:id="@+id/btn_seatNo" 
			           	android:layout_width="wrap_content" android:layout_height="wrap_content" 
			            android:background="@drawable/btn_expand_background" />
					
				</LinearLayout> 
				<LinearLayout android:id="@+id/currentNoLayout"
		    		android:gravity="center_vertical" 
		    		android:orientation="horizontal" 
		    		android:padding="10.0dip" 
		    		android:layout_width="fill_parent" 
		    		android:layout_height="wrap_content"
		    		android:background="@drawable/list_item_border"
		    		android:clickable="true"
		  			>
		    		
					<TextView 
		    			android:textAppearance="?android:textAppearanceMedium" 
		    			android:textSize="16.0sp" 
		    			android:layout_width="0.0px" 
		    			android:layout_height="wrap_content" 
		    			android:layout_marginLeft="6.0dip" 
		    			android:maxLines="2" 
		    			android:layout_weight="1.0" 
		    			android:text="当前号码："
		    			android:textColor="#ff000000"
		    			/>
					
					<TextView android:id="@+id/currentNumber"
		    			android:textAppearance="?android:textAppearanceMedium" 
		    			android:textSize="16.0sp" 
		    			android:paddingLeft="6.0dip" 
		    			android:layout_width="0.0px" 
		    			android:layout_height="wrap_content" 
		    			android:layout_marginLeft="6.0dip" 
		    			android:maxLines="2" 
		    			android:layout_weight="1.0" 
		    			android:text="0"
		    			android:textColor="#ff000000"
		    			/>
				</LinearLayout>
				<LinearLayout android:id="@+id/myNoLayout"
				    android:visibility="gone"
		    		android:gravity="center_vertical" 
		    		android:orientation="horizontal" 
		    		android:padding="10.0dip" 
		    		android:layout_width="fill_parent" 
		    		android:layout_height="wrap_content"
		    		android:background="@drawable/list_item_border"
		    		android:clickable="true"
		  			>
		    		
					<TextView 
		    			android:textAppearance="?android:textAppearanceMedium" 
		    			android:textSize="16.0sp" 
		    			android:layout_width="0.0px" 
		    			android:layout_height="wrap_content" 
		    			android:layout_marginLeft="6.0dip" 
		    			android:maxLines="2" 
		    			android:layout_weight="1.0" 
		    			android:text="我的号码："
		    			android:textColor="#ff000000"
		    			/>
					
					<TextView android:id="@+id/myNumber"
		    			android:textAppearance="?android:textAppearanceMedium" 
		    			android:textSize="16.0sp" 
		    			android:paddingLeft="6.0dip" 
		    			android:layout_width="0.0px" 
		    			android:layout_height="wrap_content" 
		    			android:layout_marginLeft="6.0dip" 
		    			android:maxLines="2" 
		    			android:layout_weight="1.0" 
		    			android:text="0"
		    			android:textColor="#ff000000"
		    			/>
		    		
				</LinearLayout>
				<LinearLayout android:id="@+id/beforeYouLayout"
				    android:visibility="gone"
		    		android:gravity="center_vertical" 
		    		android:orientation="horizontal" 
		    		android:padding="10.0dip" 
		    		android:layout_width="fill_parent" 
		    		android:layout_height="wrap_content"
		    		android:background="@drawable/list_item_border"
		    		android:clickable="true"
		  			>
					
				    <TextView 
		    			android:textAppearance="?android:textAppearanceMedium" 
		    			android:textSize="16.0sp" 
		    			android:layout_width="0.0px" 
		    			android:layout_height="wrap_content" 
		    			android:layout_marginLeft="6.0dip" 
		    			android:maxLines="2" 
		    			android:layout_weight="1.0" 
		    			android:text="在你前面:"
		    			android:textColor="#ff000000"
		    			/>
				    
		    		<TextView android:id="@+id/beforeYou"
		    			android:textAppearance="?android:textAppearanceMedium" 
		    			android:textSize="16.0sp" 
		    			android:paddingLeft="6.0dip" 
		    			android:layout_width="0.0px" 
		    			android:layout_height="wrap_content" 
		    			android:layout_marginLeft="6.0dip" 
		    			android:maxLines="2" 
		    			android:layout_weight="1.0" 
		    			android:text="0"
		    			android:textColor="#ff000000"
		    			/>
				</LinearLayout>
				
				<LinearLayout android:id="@+id/btn_GetNumberLayout"
		    		android:gravity="center_vertical" 
		    		android:orientation="horizontal" 
		    		android:padding="10.0dip" 
		    		android:layout_width="fill_parent" 
		    		android:layout_height="wrap_content"
		    		android:background="@drawable/list_item_border"
		    		android:clickable="true"
		  			>
					
					<Button android:id="@+id/btn_GetNumber"
						android:textAppearance="?android:textAppearanceMediumInverse"
						android:layout_gravity="center_vertical|center_vertical"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="拿号"
						android:textColor="#ffffffff"
						android:background="@drawable/btn_weight"
						android:textSize="14.0sp"
						/>
		    		
				</LinearLayout>
				
            </LinearLayout>
            
        </ScrollView>
	</FrameLayout>
</LinearLayout> 