<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="100dip"
    android:background="@drawable/list_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:focusable="false" >

    <LinearLayout android:id="@+id/left_layout"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:orientation="vertical"
        android:padding="1.0dip" 
        android:layout_alignParentLeft="true">

        <!-- merchant logo -->

        <ImageView
            android:id="@+id/merchantImg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty"
            android:padding="4dp"
            android:scaleType="fitXY" />
        <!-- merchant logo -->
    </LinearLayout>

    <LinearLayout android:id="@+id/right_layout"
        android:layout_width="20dip"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="1.0dip"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true" >

        <!-- merchant logo -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty"
            android:padding="4dp"
            android:src="@drawable/arrow_right_normal"
            android:scaleType="fitXY" />
        <!-- merchant logo -->
    </LinearLayout>
    
    <LinearLayout android:layout_toLeftOf="@id/right_layout"
        android:layout_toRightOf="@id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="2.0dip"
        android:paddingTop="0dip" >

        <LinearLayout
            android:id="@+id/tex2_lay1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/merchantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/empty"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff000000"
                android:textSize="11.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/merchantAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/empty"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff000000"
                android:textSize="11.0sp" />
        </LinearLayout>
    </LinearLayout>
	
</RelativeLayout>