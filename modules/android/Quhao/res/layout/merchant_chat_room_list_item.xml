<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="100dip"
    android:background="@drawable/list_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout android:id="@+id/left_layout"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:orientation="vertical"
        android:padding="1.0dip" 
        android:layout_alignParentLeft="true">

        <!-- merchant logo -->

        <ImageView
            android:id="@+id/merchantImg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty"
            android:padding="5dp"
            android:src="@drawable/no_logo"
            android:background="@drawable/person_avatar_bg"
            android:scaleType="fitXY" />
        <!-- merchant logo -->
    </LinearLayout>

    <LinearLayout 
        android:layout_toRightOf="@id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:orientation="vertical"
        android:paddingLeft="2.0dip" >

        <LinearLayout
            android:id="@+id/tex2_lay1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:orientation="vertical" 
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/merchantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/empty"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff000000"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="left|bottom"
            android:orientation="vertical" >

            <Button android:id="@+id/btn_chat"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="bottom"
		        android:background="@drawable/ic_goto_chat"/>
        </LinearLayout>
    </LinearLayout>
	
</RelativeLayout>