<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#ffffffff"
  xmlns:android="http://schemas.android.com/apk/res/android">
   
    <LinearLayout 
		android:layout_width="fill_parent"    
    	android:layout_height="wrap_content"    
    	android:background="@drawable/common_top_bar_bg1"    
    	android:paddingLeft="5dip"    
    	android:paddingRight="5dip" 
    	android:paddingTop="5dip"
    	android:paddingBottom="5dip" 
    	android:gravity="center_vertical|center_horizontal" 
    	>
		<TextView
		    android:id="@+id/merchantName"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="附近商家"
		    android:textAppearance="?android:textAppearanceMedium"
		    android:textColor="#ff000000" />
	
	</LinearLayout>
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:background="#ffffffff">
       	<ListView
         	android:id="@+id/merchantsListView"
         	android:layout_width="fill_parent"
         	android:layout_height="fill_parent"
         	android:layout_gravity="center_horizontal"
         	android:cacheColorHint="@null"
         	android:divider="@null"
         	android:entries="@null"
         	android:headerDividersEnabled="true"
        	android:listSelector="@drawable/list_item_trans"
         	android:scrollbarThumbVertical="@drawable/scrollbar"
         	android:scrollbars="vertical" />
	</LinearLayout>
            
    <LinearLayout android:layout_width="fill_parent"
		android:id="@+id/menuLayout" android:layout_height="wrap_content">
		<include android:id="@+id/menu" layout="@layout/menu_bar" />
	</LinearLayout>
</LinearLayout> 