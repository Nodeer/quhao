<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout android:id="@+id/merchantLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >
    <!-- merchant name -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:paddingLeft="2.0dip"
            android:text="@string/quhao_states_merchantName"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deep_gray"
            android:textSize="11.0sp" />

        <TextView
            android:id="@+id/merchantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/empty"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deep_gray"
            android:textSize="11.0sp" />
    </LinearLayout>
    <!-- merchant name -->


    <!-- merchant address -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:paddingLeft="2.0dip"
            android:text="@string/quhao_states_merchantAddress"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deep_gray"
            android:textSize="11.0sp" />

        <TextView
            android:id="@+id/merchantAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/empty"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deep_gray"
            android:textSize="11.0sp" />
    </LinearLayout>
    <!-- merchant address -->
	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- 我的号码-->
        <TextView
            android:layout_width="0.0px"
            android:layout_height="wrap_content"
            android:paddingLeft="2.0dip"
            android:layout_weight="3.0"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/my_number"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deep_gray"
            android:textSize="11.0sp" />

        <TextView
            android:id="@+id/myNumber"
            android:layout_width="0.0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/empty"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deep_gray"
            android:textSize="11.0sp" />
        <!-- 我的号码-->

        <!-- 座位人数-->
        <TextView
            android:layout_width="0.0px"
            android:layout_height="wrap_content"
            android:layout_weight="3.0"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/seat_number"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deep_gray"
            android:textSize="11.0sp" />

        <TextView
            android:id="@+id/seatNo"
            android:layout_width="0.0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/empty"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deep_gray"
            android:textSize="11.0sp" />
        <!-- 座位人数-->

        <!-- 在你前面-->
        <TextView
            android:layout_width="0.0px"
            android:layout_height="wrap_content"
            android:layout_weight="3.0"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/before_you"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deep_gray"
            android:textSize="11.0sp" />

        <TextView
            android:id="@+id/beforeYou"
            android:layout_width="0.0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/empty"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deep_gray"
            android:textSize="11.0sp" />
        <!-- 在你前面-->

        <!-- 当前号码 -->
        <TextView
            android:layout_width="0.0px"
            android:layout_height="wrap_content"
            android:layout_weight="3.0"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/current_number"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deep_gray"
            android:textSize="11.0sp" />

        <TextView
            android:id="@+id/currentNumber"
            android:layout_width="0.0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:lineSpacingMultiplier="1.3"
            android:text="@string/empty"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/deep_gray"
            android:textSize="11.0sp" />
        <!-- 当前号码 -->
    </LinearLayout>
	</LinearLayout>
	<!-- cancel layout -->
    <LinearLayout android:id="@+id/cancelLayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

         <!-- quhao button -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:background="@drawable/btn_weight"
            android:text="@string/cancel_sequence"
            android:textAppearance="?android:textAppearanceMediumInverse"
            android:textColor="#ff000000"
            android:textSize="14.0sp" 
            android:gravity="center"
            android:layout_gravity="center"
            />
        <!-- quhao button -->
    </LinearLayout>
    <!-- cancel layout  -->
</LinearLayout>