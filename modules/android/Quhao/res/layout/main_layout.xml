<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/common_top_bar_bg_blue"
        android:gravity="center_vertical"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip" >

        <TextView android:id="@+id/city" 
            android:textIsSelectable="true"
            android:layout_width="80dip"
            android:layout_height="fill_parent"
            android:drawableRight="@drawable/btn_expand_background"
            android:singleLine="true"
            android:textAlignment="viewEnd"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center|center_vertical"
            android:textColor="#ff000000"
            android:textSize="14.0sp" />

        <!-- search button -->
        <Button
            android:id="@+id/edit_search"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_weight"
            android:text="@string/search_merchants"
            android:textAppearance="?android:textAppearanceMediumInverse"
            android:textColor="#ff000000"
            android:textSize="14.0sp" 
            />
        <!-- search button -->
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ff000000"
            android:textSize="18sp" />
    </RelativeLayout>
    
    <!-- menu bar -->
    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
         >

        <include
            android:id="@+id/menu"
            layout="@layout/menu_bar" />
    </LinearLayout>
    <!-- menu bar -->
    
	<ScrollView 
	    android:layout_below="@id/topLayout"
	    android:layout_above="@id/menuLayout"
	    android:layout_width="fill_parent"  
	    android:layout_height="match_parent">
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:orientation="vertical" >
		    <com.withiter.quhao.view.MyGridView
		        android:id="@+id/topMerchants"
		        style="@style/CustomGridView"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="0dip"
		        android:columnWidth="50dip"
		        android:gravity="center"
		        android:horizontalSpacing="5dip"
		        android:minHeight="50dip"
		        android:numColumns="3"
		        android:paddingTop="5dip"
		        android:stretchMode="columnWidth"
		        android:verticalSpacing="5dip" />
		
		    <com.withiter.quhao.view.MyGridView
		        android:id="@+id/categorys"
		        style="@style/CustomGridView"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="0dp"
		        android:columnWidth="60dp"
		        android:gravity="center"
		        android:horizontalSpacing="5dp"
		        android:numColumns="3"
		        android:minHeight="50dp"
		        android:paddingTop="5dp"
		        android:stretchMode="columnWidth"
		        android:verticalSpacing="5dp" />
	    </LinearLayout>
	</ScrollView>
</RelativeLayout>