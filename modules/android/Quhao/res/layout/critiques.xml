<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#ffffffff"
  xmlns:android="http://schemas.android.com/apk/res/android">
   
    <RelativeLayout 
		android:layout_width="fill_parent"    
    	android:layout_height="wrap_content"    
    	android:background="@drawable/common_top_bar_bg1"    
    	android:paddingLeft="5dip"    
    	android:paddingRight="5dip" 
    	android:paddingTop="5dip"
    	android:paddingBottom="5dip" 
    	android:gravity="center_vertical">
    	<Button android:gravity="left|center_vertical" android:id="@+id/back_btn" 
           	android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:background="@drawable/btn_back_background"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />
		<TextView android:id="@+id/merchantName"
			android:textAppearance="?android:textAppearanceMedium"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="搜索 - 美食"
			android:textColor="#ff000000"
			android:layout_toRightOf="@id/back_btn"/>
		<Button android:id="@+id/btn_GetNumber"
			android:textAppearance="?android:textAppearanceMediumInverse"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="取号"
			android:textColor="#ff000000"
			android:background="@drawable/btn_weight"
			android:textSize="14.0sp"/>
	</RelativeLayout>
	<LinearLayout android:id="@+id/loadingbar"
   		android:orientation="horizontal"
   		android:layout_width="fill_parent"
   		android:layout_height="fill_parent"
   		android:background="#ffffffff"
   		android:gravity="center"
   		android:padding="10dip"
   		android:layout_weight="1.0">
   		
   		<ProgressBar 
   			android:layout_width="wrap_content" 
   			android:layout_height="wrap_content"/>
   	
  			<View 
  				android:layout_width="10dip" 
  				android:layout_height="10dip"/>
   
   		<TextView 
   			android:layout_width="wrap_content" 
   			android:layout_height="wrap_content"
   			android:textColor="#ff000000"
   			android:text="载入中..."/>

	</LinearLayout>
	<LinearLayout android:id="@+id/critiquesLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0" >

        <ListView
            android:id="@+id/critiquesView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:cacheColorHint="@null"
            android:divider="@null"
            android:entries="@null"
            android:headerDividersEnabled="true"
            android:listSelector="@drawable/list_item_trans"
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:scrollbars="vertical" />
    </LinearLayout>
</LinearLayout> 