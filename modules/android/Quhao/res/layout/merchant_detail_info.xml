<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/loadingbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dip"
        android:visibility="gone" >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="10dip"
            android:layout_height="10dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="#ff000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/serverdata"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="150dip"
                android:layout_height="150dip"
                android:orientation="vertical"
                android:padding="1.0dip" >

                <!-- merchant logo -->
                <ImageView
                    android:id="@+id/merchantImg"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/empty"
                    android:padding="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_logo" />
                <!-- merchant logo -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingLeft="2.0dip"
                android:paddingTop="3dp" >

                <!-- 人均 -->
                <LinearLayout
                    android:id="@+id/tex2_lay1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.0dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/merchant_detail_merchantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:text="@string/empty"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#ff000000"
                        android:textSize="15.0sp" />
                </LinearLayout>
                <!-- 人均 -->

				<!-- 总体评价 -->
                <LinearLayout
                    android:id="@+id/tex2_lay3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.0dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text2_renjun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/renjun"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#ff000000"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/merchant_details_AverageCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="4.0dip"
                        android:singleLine="true"
                        android:text="@string/zero"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/red"
                        android:textSize="12.0sp" />
                </LinearLayout>
				<!-- 总体评价 -->

                <LinearLayout
                    android:id="@+id/text2_lay2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.0dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text2_shop_score1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/zongtipingjia"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#ff000000"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/zongtipingjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="4.0dip"
                        android:singleLine="true"
                        android:text="@string/zero"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/red"
                        android:textSize="12.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tex2_lay2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/pay_attention"
                        android:textAppearance="?android:textAppearanceMediumInverse" />

                    <TextView
                        android:layout_width="2dp"
                        android:layout_height="35dip"
                        android:paddingRight="10dip"
                        android:text="@string/null_2_space"
                        android:textSize="11.0sp" />

                    <Button
                        android:id="@+id/btn_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/ic_chat"
                        android:textAppearance="?android:textAppearanceMediumInverse" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_open"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/btn_background_red"
                        android:paddingRight="10dip"
                        android:text="@string/open_service"
                        android:textAppearance="?android:textAppearanceMediumInverse"
                        android:textColor="@color/white"
                        android:textSize="11.0sp" />

                    <Button
                        android:id="@+id/btn_GetNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/btn_background_red"
                        android:paddingRight="10dip"
                        android:textAppearance="?android:textAppearanceMediumInverse"
                        android:textColor="@color/white"
                        android:textSize="11.0sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/currentQuHaoLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0.0dip"
            android:background="@drawable/update_password_input"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingBottom="1.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:paddingTop="1.0dip"
                android:text="@string/quhaoqingkuang"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff000000"
                android:textSize="16.0sp" />

            <ListView
                android:id="@+id/reservationListView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:cacheColorHint="@null"
                android:divider="@null"
                android:entries="@null"
                android:headerDividersEnabled="true"
                android:listSelector="@drawable/list_item_trans"
                android:scrollbarThumbVertical="@drawable/scrollbar"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/reservation_list_empty"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="15dip"
                android:text="暂无"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paidui_condition_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/update_password_input"
            android:orientation="vertical"
            android:paddingTop="5dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:baselineAligned="false"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical|left" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10.0dip"
                        android:paddingTop="5.0dip"
                        android:text="@string/paidui_condition"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#ff000000"
                        android:textSize="16.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dip" >

                    <Button
                        android:id="@+id/btn_refresh_paidui"
                        android:layout_width="35dip"
                        android:layout_height="25dip"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/button_background_blue"
                        android:gravity="center"
                        android:text="刷新"
                        android:textAppearance="?android:textAppearanceMediumInverse"
                        android:textSize="11.0sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/paidui_condition_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:cacheColorHint="@null"
                    android:divider="@null"
                    android:entries="@null"
                    android:headerDividersEnabled="true"
                    android:listSelector="@drawable/list_item_trans"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/paidui_list_empty"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dip"
                    android:text="暂无"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/youhui_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/merchant_detail_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10.0dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/empty"
                android:src="@drawable/merchant_detail_youhui" />

            <TextView
                android:id="@+id/youhui"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.0dip"
                android:layout_weight="1.0"
                android:maxLines="2"
                android:paddingRight="6.0dip"
                android:text="@string/no_youhui_info"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff000000"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/empty"
                android:duplicateParentState="true"
                android:paddingRight="6.0dip"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
        <!-- 地址 -->

        <LinearLayout
            android:id="@+id/mapLayout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_multi_top"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10.0dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/empty"
                android:src="@drawable/ic_address_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/address"
                android:textColor="#ff000000"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/merchantAddress"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.0dip"
                android:layout_weight="1.0"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/empty"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff000000"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/empty"
                android:duplicateParentState="true"
                android:paddingRight="6.0dip"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
        <!-- 地址 -->


        <!-- 联系方式 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_multi_mid"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10.0dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/empty"
                android:src="@drawable/ic_phone_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/contact"
                android:textColor="#ff000000"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/merchantPhone"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.0dip"
                android:layout_weight="1.0"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/empty"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff000000"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/empty"
                android:duplicateParentState="true"
                android:paddingRight="6.0dip"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
        <!-- 联系方式 -->


        <!-- 营业时间 -->

        <LinearLayout
            android:id="@+id/opentimeLayout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_multi_end"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10.0dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/empty"
                android:src="@drawable/ic_clock_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/opentime"
                android:textColor="#ff000000"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/merchantBusinessTime"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.0dip"
                android:layout_weight="1.0"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/empty"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff000000"
                android:textSize="16.0sp" />
        </LinearLayout>
        <!-- 营业时间 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/desc_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/update_password_input"
                android:orientation="vertical" >

                <!-- merchant description -->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:paddingTop="5.0dip"
                    android:text="@string/merchant_description"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.3"
                    android:lines="2"
                    android:padding="8.0dip"
                    android:text="@string/no_description"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/deep_gray"
                    android:textSize="12.0sp" />
                <!-- merchant description -->
            </LinearLayout>

            <!-- comments title -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/update_password_input"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="5dip" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10.0dip"
                        android:text="@string/comment"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="#ff000000"
                        android:textSize="16.0sp" />
                </LinearLayout>
                <!-- comments title -->

                <LinearLayout
                    android:id="@+id/critiqueLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <!-- comment content -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="4.0dip"
                        android:paddingLeft="10.0dip"
                        android:paddingTop="4.0dip" >

                        <TextView
                            android:id="@+id/comment_content"
                            android:layout_width="0.0px"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3.0dip"
                            android:layout_weight="1.0"
                            android:lineSpacingMultiplier="1.3"
                            android:text="@string/empty"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/deep_gray"
                            android:textSize="16.0sp" />
                    </LinearLayout>
                    <!-- comment content -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="20.0dip"
                        android:paddingLeft="10.0dip"
                        android:paddingTop="4.0dip" >

                        <TextView
                            android:id="@+id/comment_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:singleLine="true"
                            android:text="@string/empty"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/light_gray"
                            android:textSize="14.0sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>