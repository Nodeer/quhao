<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#ffffffff"
  xmlns:android="http://schemas.android.com/apk/res/android">
   
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_top_bar_bg1"
        android:gravity="center_vertical"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="60dip"
            android:layout_height="35dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/btn_back"
            android:background="@drawable/btn_back_background"
            android:gravity="center|center_vertical"
            android:textColor="#ff000000"
            android:textSize="14.0sp"  />

        <Button
            android:id="@+id/btn_opinion"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_weight"
            android:text="@string/commit"
            android:textAppearance="?android:textAppearanceMediumInverse"
            android:textColor="#ff000000"
            android:textSize="14.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/more_opinion"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ff000000" />
    </RelativeLayout>
	<ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:fillViewport="true" android:layout_weight="1.0">
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:background="#ffffffff"
	    android:gravity="center"
	    android:orientation="vertical" >

		<EditText
		    android:id="@+id/opinion_edit"
		    android:layout_width="288dp"
		    android:layout_height="365dp"
		    android:background="@drawable/post_edit_bg"
		    android:gravity="top"
		    android:hint="@string/more_option_hint"
		    android:textSize="14.0sp" />

		<EditText
		    android:id="@+id/opinion_edit_contact"
		    android:layout_width="292dp"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="15dip"
		    android:background="@drawable/post_edit_bg"
		    android:ems="10"
		    android:gravity="center"
		    android:hint="@string/more_option_phone_hint"
		    android:textSize="14.0sp" >

		    <requestFocus />
		</EditText>
	</LinearLayout>
	</ScrollView>
</LinearLayout> 