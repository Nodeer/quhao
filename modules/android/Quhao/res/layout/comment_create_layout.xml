<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#ffffffff"
  xmlns:android="http://schemas.android.com/apk/res/android">
   
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/common_top_bar_bg_blue3"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="50dip"
            android:layout_height="fill_parent"
            android:background="@null"
            android:drawableLeft="@drawable/arrow_left"
            android:gravity="center|center_vertical"
            android:textColor="#ff000000"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="写点评"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#ff000000" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_weight"
            android:text="@string/commit"
            android:textColor="#ff000000"
            android:textSize="14.0sp" />

    </RelativeLayout>

	<ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:fillViewport="true" android:layout_weight="1.0">
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:background="#ffffffff"
	    android:gravity="center"
	    android:orientation="vertical" >

	    <LinearLayout android:layout_width="fill_parent" 
	        android:layout_height="wrap_content">
		    <TextView android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:text="口味    ："/>
		    <RatingBar style="@style/commentRatingBar" android:stepSize="1"
				android:layout_marginLeft="10dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/kouwei_ratingbar">
		        
		    </RatingBar>
	    </LinearLayout>
	    <LinearLayout android:layout_width="fill_parent" 
	        android:layout_height="wrap_content">
		    <TextView android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:text="环境    ："/>
		    <RatingBar style="@style/commentRatingBar" android:stepSize="1"
				android:layout_marginLeft="10dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/huanjing_ratingbar">
		        
		    </RatingBar>
	    </LinearLayout>
	    <LinearLayout android:layout_width="fill_parent" 
	        android:layout_height="wrap_content">
		    <TextView android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:text="服务    ："/>
		    <RatingBar style="@style/commentRatingBar" android:stepSize="1"
				android:layout_marginLeft="10dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/fuwu_ratingbar">
		        
		    </RatingBar>
	    </LinearLayout>
	    <LinearLayout android:layout_width="fill_parent" 
	        android:layout_height="wrap_content">
		    <TextView android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:text="性价比："/>
		    <RatingBar style="@style/commentRatingBar" android:stepSize="1"
				android:layout_marginLeft="10dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/xingjiabi_ratingbar">
		        
		    </RatingBar>
	    </LinearLayout>

	    <EditText
		    android:id="@+id/avg_cost_edit"
		    android:layout_width="292dp"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="15dip"
		    android:background="@drawable/post_edit_bg"
		    android:ems="10"
		    android:maxLength="5"
		    android:gravity="center"
		    android:inputType="number"
		    android:textSize="14.0sp" />
		    
		<EditText
		    android:id="@+id/comment_edit"
		    android:layout_width="293dp"
		    android:layout_height="365dp"
		    android:background="@drawable/post_edit_bg"
		    android:gravity="left"
		    android:hint="@string/more_option_hint"
		    android:textSize="14.0sp" />

	</LinearLayout>
	</ScrollView>
</LinearLayout> 