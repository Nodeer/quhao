<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >
    <!-- title -->

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/common_top_bar_bg_blue3"
        android:gravity="center_vertical"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" 
        android:paddingLeft="5dip"
        android:paddingRight="5dip">
		<TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/gerenzhongxin"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/white" />

    </FrameLayout>
    <!-- title -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <!-- avatar, nickname and mobile number -->

        <RelativeLayout android:id="@+id/person_info"
            android:layout_width="fill_parent"
            android:layout_height="120dip"
            android:background="#ffffffff"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp" >

            <!-- left avatar -->

            <LinearLayout android:id="@+id/avatar_layout"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:padding="8.0dip"
                android:background="@drawable/person_avatar_bg"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:contentDescription="@string/avatar"
                    android:src="@drawable/person_avatar" 
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <!-- left avatar -->


			<!-- right nickname and mobile -->
            
            <LinearLayout android:id="@+id/right_layout"
                android:layout_width="30dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8.0dip">

                <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:contentDescription="@null"
	                android:src="@drawable/arrow_right" />
            </LinearLayout>
            <!-- right nickname and mobile -->

            <LinearLayout android:id="@+id/info_detail_layout"
                android:layout_toRightOf="@id/avatar_layout"
                android:layout_toLeftOf="@id/right_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip">

                <!-- nickname -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" 
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:text="@string/nick_name_colon"
                        android:textColor="#ff000000"
                        android:gravity="center_vertical"
                        android:layout_marginRight="3dp"
                        android:textSize="16.0sp" />
                    
                    <TextView
                        android:id="@+id/nickName"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:text="@string/noname"
                        android:textColor="#ff000000"
                        android:textSize="16.0sp" />
                </LinearLayout>
                <!-- nickname -->

                <!-- jifen -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" 
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:text="@string/jifen_label_colon"
                        android:textColor="#ff000000"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/jifen"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3.0dip"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:text="@string/jifen_default"
                        android:textColor="#ff000000"
                        android:textSize="16.0sp" />
                </LinearLayout>
                <!-- jifen -->

            </LinearLayout>
            
        </RelativeLayout>
        
        <RelativeLayout android:id="@+id/person_info_logout"
            android:layout_width="fill_parent"
            android:layout_height="120dip"
            android:background="#ffffffff"
            android:orientation="horizontal" 
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp">

            <!-- left avatar -->

            <LinearLayout android:id="@+id/avatar_layout_logout"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:padding="8dp"
                android:background="@drawable/person_avatar_bg"
                android:gravity="center" >

                <ImageView
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:contentDescription="@string/avatar"
                    android:src="@drawable/person_avatar" 
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <!-- left avatar -->


			<!-- right nickname and mobile -->
            
            <LinearLayout android:id="@+id/right_layout_logout"
                android:layout_width="30dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8.0dip">

                <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:contentDescription="@null"
	                android:src="@drawable/arrow_right" />
            </LinearLayout>
            <!-- right nickname and mobile -->

            <LinearLayout 
                android:layout_toRightOf="@id/avatar_layout_logout"
                android:layout_toLeftOf="@id/right_layout_logout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip"
                android:paddingTop="8.0dip">

                <!-- nickname -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.0dip"
                    android:orientation="horizontal" >
					
                    <ImageView android:id="@+id/login"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/person_center_login"/>
                    
                </LinearLayout>
                <!-- nickname -->

                <!-- jifen -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.0dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.0dip"
                        android:singleLine="true"
                        android:text="@string/no_register_tip"
                        android:textColor="#ff000000"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.0dip"
                        android:singleLine="true"
                        android:textColor="@color/red"
                        android:text="@string/link_register"
                        android:textSize="16.0sp" />
                </LinearLayout>
                <!-- jifen -->

            </LinearLayout>
            
        </RelativeLayout>
        <!-- avatar, nickname and mobile number -->


        <!-- qiandao, dianpin, zhaopian -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10.0dip"
            android:textAlignment="center"
            android:background="@drawable/background_line"
            >

            <LinearLayout android:id="@+id/signInLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:textAlignment="center" >

                <ImageView android:id="@+id/qiandao_label"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_sign_up_red"
                    />

                <TextView
                    android:id="@+id/value_qiandao"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="签到(0)"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout android:id="@+id/dianpingLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:textAlignment="center" >

                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_comment"
                    />
                
                <TextView
                    android:id="@+id/value_dianpin"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/value_dianpin"
                    android:textAlignment="center" />
            </LinearLayout>
            
            <LinearLayout android:id="@+id/my_attention_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:textAlignment="center" >

                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_my_attention"
                    />
                <TextView
                    android:id="@+id/my_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/value_dianpin"
                    android:textAlignment="center" />
            </LinearLayout>

            <!-- <LinearLayout android:id="@+id/photoLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10.0dip"
                android:textAlignment="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/label_zhaopian"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/value_zhaopian"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/value_zhaopian"
                    android:textAlignment="center" />
            </LinearLayout> -->
        </LinearLayout>
        <!-- qiandao, dianpin, zhaopian -->


        <!-- current/history quhao, history jifen -->
        <LinearLayout android:id="@+id/current_paidui_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_line"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10.0dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/person_current_paidui_icon"
                android:src="@drawable/person_current_paidui" />

            <TextView
                android:id="@+id/current_paidui"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.0dip"
                android:layout_weight="1.0"
                android:maxLines="2"
                android:paddingRight="6.0dip"
                android:text="@string/current_paidui"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff000000"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@null"
                android:duplicateParentState="true"
                android:paddingRight="6.0dip"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

        <LinearLayout android:id="@+id/history_paidui_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_line"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10.0dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/person_history_paidui_icon"
                android:src="@drawable/person_history_paidui" />

            <TextView
                android:id="@+id/history_paidui"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.0dip"
                android:layout_weight="1.0"
                android:maxLines="2"
                android:paddingRight="6.0dip"
                android:text="@string/history_paidui"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff000000"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@null"
                android:duplicateParentState="true"
                android:paddingRight="6.0dip"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

        <LinearLayout android:id="@+id/credit_cost_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_line"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10.0dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/person_history_paidui_icon"
                android:src="@drawable/person_history_jifen" />

            <TextView
                android:id="@+id/mail"
                android:layout_width="0.0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.0dip"
                android:layout_weight="1.0"
                android:maxLines="2"
                android:paddingRight="6.0dip"
                android:text="@string/history_jifen"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff000000"
                android:textSize="16.0sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@null"
                android:duplicateParentState="true"
                android:paddingRight="6.0dip"
                android:src="@drawable/arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_line"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10.0dip" >
        </LinearLayout>

    </LinearLayout>

</LinearLayout>