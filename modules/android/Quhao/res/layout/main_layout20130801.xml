<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bg" >
    <ScrollView android:id="@+id/parentScroll"
        android:layout_width="fill_parent" android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/parent1"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:background="@drawable/main_bg" >
   	<LinearLayout android:id="@+id/searchLayout" android:layout_width="fill_parent"
	    android:layout_height="wrap_content" android:layout_weight="1" android:orientation="horizontal">
	    <EditText android:id="@+id/searchText" android:layout_width="wrap_content" android:layout_height="wrap_content"
	        android:layout_weight="3"/>
	    <Button android:id="@+id/searchBtn" android:layout_width="wrap_content" android:layout_height="wrap_content"
	        android:layout_weight="1" android:text="搜索"/>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:id="@+id/topMerchantLayout" android:layout_weight="1"
		android:layout_height="wrap_content">
		<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" >
			<ImageButton android:id="@+id/topMerchant1" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
			    android:src="@drawable/default_icon1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
		    <ImageButton android:id="@+id/topMerchant2" android:layout_toRightOf="@id/topMerchant1" android:layout_alignParentTop="true"
		        android:src="@drawable/default_icon1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		    <ImageButton android:id="@+id/topMerchant3" android:layout_toRightOf="@id/topMerchant2" android:layout_alignParentTop="true"
		        android:src="@drawable/default_icon1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		    <ImageButton android:id="@+id/topMerchant4" android:layout_below="@id/topMerchant1" android:layout_alignParentLeft="true"
		        android:src="@drawable/default_icon1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		    <ImageButton android:id="@+id/topMerchant5" android:layout_below="@id/topMerchant2" android:layout_toRightOf="@+id/topMerchant4"
		        android:src="@drawable/default_icon1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		    <ImageButton android:id="@+id/topMerchant6" android:layout_below="@id/topMerchant2" android:layout_toRightOf="@+id/topMerchant5"
		        android:src="@drawable/default_icon1" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
		</RelativeLayout>
		
	</LinearLayout>
	<LinearLayout android:id="@+id/categorysLayout" android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >
		<com.withiter.quhao.view.InnerListView android:id="@+id/categorysListView" android:layout_width="fill_parent"
		    android:layout_height="fill_parent" android:layout_gravity="center_horizontal"
		    android:cacheColorHint="@null" android:divider="@null" android:entries="@null"
		    android:headerDividersEnabled="true"  android:listSelector="@drawable/list_item_trans"
		    android:scrollbarThumbVertical="@drawable/scrollbar"
		    android:scrollbars="vertical" />
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent" android:layout_weight="1"
		android:id="@+id/menuLayout" android:layout_height="wrap_content">
		<include android:id="@+id/menu" layout="@layout/menu_bar" />
	</LinearLayout>
	</LinearLayout>
	</ScrollView>
</LinearLayout>