<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#ffffffff"
  xmlns:android="http://schemas.android.com/apk/res/android">
   
    <RelativeLayout 
		android:layout_width="fill_parent"    
    	android:layout_height="50dip"    
    	android:background="@drawable/common_top_bar_bg_blue3"    
    	android:paddingLeft="5dip"    
    	android:paddingRight="5dip" 
    	android:paddingTop="5dip"
    	android:paddingBottom="5dip" 
    	android:gravity="center_vertical" 
    	>
    	<LinearLayout android:id="@+id/back_btn_layout"
	        android:layout_width="50dp"
	        android:layout_centerVertical="true"
	        android:layout_height="fill_parent"
	        android:gravity="center">
	        <Button android:id="@+id/back_btn"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:background="@drawable/arrow_left"
	            android:gravity="center"
	            android:textColor="#ff000000"
	            android:textSize="18.0sp"  />
		</LinearLayout>

		<TextView
		    android:id="@+id/merchantName"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_centerHorizontal="true"
		    android:layout_centerVertical="true"
		    android:gravity="center"
		    android:text="系统设置"
		    android:textAppearance="?android:textAppearanceMedium"
		    android:textColor="#ff000000" />

	</RelativeLayout>
	<ScrollView android:layout_width="fill_parent" android:layout_height="wrap_content" android:fillViewport="true" android:layout_weight="1.0">
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:background="#ffffffff"
	    android:gravity="center">

		<LinearLayout
		    android:id="@+id/more_settings_cleanpicture"
		    android:layout_width="292dp"
		    android:layout_height="55dp"
		    android:layout_marginTop="20dip"
		    android:background="@drawable/form_border_top"
		    android:gravity="center_vertical"
		    android:orientation="horizontal"
		    android:paddingBottom="10dip"
		    android:paddingTop="10dip" >
	
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:adjustViewBounds="true"
	            android:src="@drawable/icon_btn_bbspic" />
	
	        <TextView
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dip"
	            android:layout_weight="1"
	            android:gravity="center_vertical"
	            android:text="@string/more_setting_cleanpicture"
	            android:textColor="@color/black"
	            android:textSize="14sp" />
	
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dip"
	            android:adjustViewBounds="true"
	            android:src="@drawable/arrow_right" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/more_settings_cleancache"
	        android:layout_width="292dp"
		    android:layout_height="55dp"
	        android:background="@drawable/form_border_middle"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingBottom="10dip"
	        android:paddingTop="10dip" >
	
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:adjustViewBounds="true"
	            android:src="@drawable/icon_btn_cleardata" />
	
	        <TextView
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dip"
	            android:layout_weight="1"
	            android:gravity="center_vertical"
	            android:text="@string/more_setting_cleancache"
	            android:textColor="@color/black"
	            android:textSize="14sp" />
	
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dip"
	            android:adjustViewBounds="true"
	            android:src="@drawable/arrow_right" />
	    </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/more_settings_imageshow"
	        android:layout_width="292dp"
		    android:layout_height="55dp"
	        android:background="@drawable/form_border_bottom"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingBottom="10dip"
	        android:paddingTop="10dip" >
	
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:adjustViewBounds="true"
	            android:src="@drawable/icon_btn_clearpic" />
	
	        <TextView
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dip"
	            android:layout_weight="1"
	            android:gravity="center_vertical"
	            android:text="@string/more_setting_showimage"
	            android:textColor="@color/black"
	            android:textSize="14sp" />
	
	        <ImageView
	            android:id="@+id/more_settings_image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="10dip"
	            android:adjustViewBounds="true"
	            android:src="@drawable/checkbox_off" />
    	</LinearLayout>
	</LinearLayout>
	</ScrollView>

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="75dp"
	    android:layout_marginTop="20dip"
	    android:gravity="center_vertical"
	    android:orientation="horizontal"
	    android:paddingBottom="10dip"
	    android:paddingTop="10dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/bulb" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/sys_option"
            android:textColor="@color/main_grid_text_color"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout> 