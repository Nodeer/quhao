<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#ffffffff"
  xmlns:android="http://schemas.android.com/apk/res/android">
   
    <RelativeLayout
        android:id="@+id/base_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"  
    	android:background="@drawable/common_top_bar_bg1"    
    	>
    	<Button android:id="@+id/back_btn" 
    	    android:layout_centerVertical="true"
           	android:layout_width="60dip"
            android:layout_height="40dip"
            android:text="@string/btn_back"
            android:background="@drawable/btn_back_background"
            android:gravity="center|center_vertical"
            android:textColor="#ff000000"
            android:textSize="14.0sp" />
		<TextView android:id="@+id/name"
			android:textAppearance="?android:textAppearanceMedium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="name"
			android:textColor="#ff000000"
			android:textSize="14sp"/>
	
	</RelativeLayout>
	<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:fillViewport="true" >
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
		<!-- 
        <TextView
	        android:id="@+id/mark_listenter_text"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:text="拖动marker1" />
		 -->
	
        <com.amap.api.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
	
    </LinearLayout>
    </ScrollView>
</LinearLayout> 