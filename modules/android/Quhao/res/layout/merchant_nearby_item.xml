<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="90dip"
    android:background="@drawable/list_selector" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="108dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/empty"
            android:focusable="false"
            android:scaleType="fitXY"
            android:padding="2dip"
            android:src="@drawable/no_logo" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/img"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                 <!-- 商家名称 -->
	            <TextView
	                android:id="@+id/merchantName"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:ellipsize="end"
	                android:singleLine="true"
	                android:text="@string/empty"
	                android:textColor="@color/black"
	                android:textSize="15sp" />
	            <!-- 商家名称 -->
            </LinearLayout>
			<LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

			    <ImageView android:id="@+id/youhui"
			        android:layout_width="20dip"
			        android:layout_height="20dip"
			        android:src="@drawable/ic_youhui"
			        android:contentDescription="@string/empty"/>
			    <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="20dip"
	                android:ellipsize="end"
	                android:singleLine="true"
	                android:text="@string/null_2_space"
	                android:textColor="@color/red"
	                android:textSize="13sp" />
                 <!-- 是否可以取号 -->
                 <ImageView android:id="@+id/quhao"
			        android:layout_width="20dip"
			        android:layout_height="20dip"
			        android:src="@drawable/ic_quhao"
			        android:contentDescription="@string/empty"/>
	            <!--<TextView
	                android:id="@+id/quhao"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:ellipsize="end"
	                android:singleLine="true"
	                android:text="@string/empty"
	                android:textColor="@color/red"
	                android:textSize="13sp" />
	             	是否可以取号 -->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
			<!-- 
                <ImageView
                    android:id="@+id/pingfen"
                    android:contentDescription="@string/empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:src="@drawable/star50" />
 			-->
                <TextView
                    android:id="@+id/merchantRenjun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/empty"
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:contentDescription="@string/empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="距离：" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/empty"
                    android:textColor="#666666"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>