<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:background="#EFEFEF"
    android:orientation="horizontal" >

    <LinearLayout android:id="@+id/cb_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        <CheckBox
	        android:id="@+id/item_cb"
	        android:layout_width="wrap_content"
	        android:layout_height="30dip"
	        android:focusable="false"
	        android:clickable="false"
	        android:focusableInTouchMode="false"
	        android:gravity="right|center_vertical" />
    </LinearLayout>
    <FrameLayout
         android:layout_width="90dp"
         android:layout_height="90dp"
         android:gravity="center"
         android:orientation="horizontal">
        <ImageView 
            android:layout_height="90dp"
            android:layout_width="3dp"
            android:src="@drawable/jifen_time_line"
            android:contentDescription="@null"
            android:layout_gravity="center_horizontal"
            />
         <TextView
             android:id="@+id/date"
             android:layout_width="65dp"
             android:layout_height="70dp"
             android:text="2014/06/19 11:33"
             android:gravity="center"
             android:layout_gravity="center"
             android:background="@drawable/jifen_time_bg"
             android:textColor="#ff000000"
             android:textSize="10.0sp" />
	</FrameLayout>
           
    <LinearLayout android:id="@+id/credit_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:background="@drawable/jifen_desc_bg" >

        <!-- 积分消费所在商家 -->
        <LinearLayout android:id="@+id/merchantLayout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="4.0dip"
            android:paddingLeft="10.0dip" >

            <TextView
                android:id="@+id/merchantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:paddingLeft="8dip"
                android:textColor="#ff000000" />

        </LinearLayout>
        <!-- 积分消费所在商家 -->


        <!-- 积分消费信息描述 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10.0dip"
            android:baselineAligned="false" 
            android:paddingTop="4.0dip" >

	            <TextView
	                android:id="@+id/description"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingLeft="8dip"
	                android:text="desc"
	                android:textColor="#ff000000" 
	                android:textSize="12.0sp"
					android:layout_gravity="left"/>
        </LinearLayout>
        <!-- 积分消费信息描述 -->
    </LinearLayout>

</LinearLayout>