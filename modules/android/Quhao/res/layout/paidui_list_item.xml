<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
 	android:gravity="center_vertical" 
 	android:orientation="vertical" 
 	android:layout_width="fill_parent" 
 	android:layout_height="wrap_content"
 	android:background="@drawable/list_item"
 	android:clickable="true"
	>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <TextView 
	  		android:textAppearance="?android:textAppearanceMedium" 
	  		android:textSize="13.0sp" 
	  		android:textColor="@color/deep_gray" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip" 
			android:paddingLeft="5.0dip"
			android:lineSpacingMultiplier="1.3" 
			android:text="酒店名称 ： "
			/>
	  	<TextView android:id="@+id/merchantName"
	  		android:textAppearance="?android:textAppearanceMedium" 
	  		android:textSize="13.0sp" 
	  		android:textColor="@color/deep_gray" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip" 
			android:lineSpacingMultiplier="1.3" 
			android:text="1"
			/>
  	</LinearLayout>
  	<LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <TextView 
	  		android:textAppearance="?android:textAppearanceMedium" 
	  		android:textSize="13.0sp" 
	  		android:textColor="@color/deep_gray" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip" 
			android:paddingLeft="5.0dip"
			android:lineSpacingMultiplier="1.3" 
			android:text="酒店地址："
			/>
	  	<TextView android:id="@+id/merchantAddress"
	  		android:textAppearance="?android:textAppearanceMedium" 
	  		android:textSize="13.0sp" 
	  		android:textColor="@color/deep_gray" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip" 
			android:lineSpacingMultiplier="1.3" 
			android:text="1"
			/>
  	</LinearLayout>
  	
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <TextView 
	  		android:textAppearance="?android:textAppearanceMedium" 
	  		android:textSize="10.0sp" 
	  		android:textColor="@color/deep_gray" 
			android:layout_width="0.0px" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip" 
			android:layout_weight="3.0"
			android:paddingLeft="5.0dip"
			android:lineSpacingMultiplier="1.3" 
			android:text="我的号码："
			/>
	  	<TextView android:id="@+id/myNumber"
	  		android:textAppearance="?android:textAppearanceMedium" 
	  		android:textSize="10.0sp" 
	  		android:textColor="@color/deep_gray" 
			android:layout_width="0.0px" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip" 
			android:layout_weight="1.0"
			android:lineSpacingMultiplier="1.3" 
			android:text="1"
			/>
		<TextView 
	  		android:textAppearance="?android:textAppearanceMedium" 
	  		android:textSize="10.0sp" 
	  		android:textColor="@color/deep_gray" 
			android:layout_width="0.0px" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip" 
			android:layout_weight="3.0"
			android:lineSpacingMultiplier="1.3" 
			android:text="座位人数："
			/>
	  	<TextView android:id="@+id/seatNo"
	  		android:textAppearance="?android:textAppearanceMedium" 
	  		android:textSize="10.0sp" 
	  		android:textColor="@color/deep_gray" 
			android:layout_width="0.0px" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip" 
			android:layout_weight="1.0"
			android:lineSpacingMultiplier="1.3" 
			android:text="1"
			/>
	  		
	  	<TextView 
	  		android:textAppearance="?android:textAppearanceMedium" 
	  		android:textSize="10.0sp" 
	  		android:textColor="@color/deep_gray" 
			android:layout_width="0.0px" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip" 
			android:layout_weight="3.0"
			android:lineSpacingMultiplier="1.3" 
			android:text="在你前面："
			/>
	  	<TextView android:id="@+id/beforeYou"
	  		android:textAppearance="?android:textAppearanceMedium" 
	  		android:textSize="10.0sp" 
	  		android:textColor="@color/deep_gray" 
			android:layout_width="0.0px" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip" 
			android:layout_weight="1.0"
			android:lineSpacingMultiplier="1.3" 
			android:text="1"
			/>
	  	
	  	<TextView 
	  		android:textAppearance="?android:textAppearanceMedium" 
	  		android:textSize="10.0sp" 
	  		android:textColor="@color/deep_gray" 
			android:layout_width="0.0px" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip" 
			android:layout_weight="3.0"
			android:lineSpacingMultiplier="1.3" 
			android:text="当前号码："
			/>
	  	<TextView android:id="@+id/currentNumber"
	  		android:textAppearance="?android:textAppearanceMedium" 
	  		android:textSize="10.0sp" 
	  		android:textColor="@color/deep_gray" 
			android:layout_width="0.0px" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip" 
			android:layout_weight="1.0"
			android:lineSpacingMultiplier="1.3" 
			android:text="1"
			/>
  	</LinearLayout>
</LinearLayout> 
