<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_gravity="center"
        android:background="@drawable/common_top_bar_bg_blue3"
        android:padding="5dip" >

        <LinearLayout android:id="@+id/back_btn_layout"
	        android:layout_width="50dp"
	        android:layout_centerVertical="true"
	        android:layout_height="fill_parent"
	        android:gravity="center">
	        <Button android:id="@+id/back_btn"
	            android:layout_width="20dp"
	            android:layout_height="18dp"
	            android:background="@drawable/arrow_left"
	            android:gravity="center"
	            android:textColor="#ff000000"
	            android:textSize="18.0sp"  />
		</LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/search_title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/base_title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:padding="5dip" >

        <EditText
            android:id="@+id/edit_search1"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:gravity="left|center"
            android:singleLine="true"
            android:hint="@string/search_placeholder"
            android:background="@drawable/style_edittext"
            android:textSize="12sp"
            android:paddingLeft="20dp"
            android:imeOptions="actionSearch"
            />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/category_search_btn"
            android:gravity="left|center"
            android:paddingLeft="20dip" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/merchantsLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/merchantsListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:cacheColorHint="@null"
            android:divider="@null"
            android:entries="@null"
            android:headerDividersEnabled="true"
            android:listSelector="@drawable/list_item_trans"
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:scrollbars="vertical" />
    </LinearLayout>

</LinearLayout>