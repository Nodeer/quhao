<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:paddingLeft="10dp"
	android:paddingRight="10dp"
    android:background="#EFEFEF"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="5dp">
   		<LinearLayout android:gravity="center_vertical" 
    		android:orientation="vertical" 
    		android:paddingLeft="5.0dip" 
    		android:focusable="false"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content">
   			<TextView android:id="@+id/merchantName"
   				android:layout_width="wrap_content"
   				android:layout_height="wrap_content"
   				android:text="111111111"
   				android:textStyle="bold"
   				android:textColor="#ff000000"/>
   			
   		</LinearLayout>
   		<LinearLayout android:gravity="center_vertical" 
	   		android:orientation="vertical" 
	   		android:layout_width="fill_parent" 
	   		android:layout_height="wrap_content"
	   		android:background="@drawable/choosearea_bg_left">
	   		<LinearLayout 
	   			android:gravity="center_vertical" 
	    		android:orientation="horizontal" 
	    		android:paddingTop="3dip"
	    		android:paddingLeft="5.0dip" 
	    		android:layout_width="fill_parent" 
	    		android:layout_height="wrap_content">
	   			<TextView android:id="@+id/modified"
	   				android:layout_width="0dp"
	   				android:layout_height="wrap_content"
	   				android:layout_weight="1.0"
	   				android:text="2014-05-11 16:46:36"
	   				android:textColor="#ff000000"/>
	  			<ImageView android:id="@+id/star"
	   				android:layout_width="0dp"
	   				android:layout_height="wrap_content"
	   				android:layout_weight="1.0"
	   				android:contentDescription="@string/imageDesc"
	   				android:src="@drawable/star45"/>
	   		</LinearLayout>
   	
	    	<LinearLayout 
	    		android:gravity="center_vertical" 
	    		android:orientation="horizontal" 
	    		android:paddingLeft="5.0dip" 
	    		android:paddingTop="4.0dip"
	    		android:paddingBottom="4.0dip"
	    		android:paddingRight="4.0dip"
	    		android:layout_width="fill_parent" 
	    		android:layout_height="wrap_content">
	  
	    		<TextView android:id="@+id/content"
	    			android:textAppearance="?android:textAppearanceMedium" 
	    			android:textSize="12sp" 
	    			android:textColor="@color/deep_gray" 
					android:layout_width="0.0px" 
					android:layout_height="wrap_content" 
					android:layout_weight="1.0"
					android:lineSpacingMultiplier="1.3" 
					android:text="@string/no_desc"/>
	    		
			</LinearLayout>
   	</LinearLayout>
</LinearLayout> 