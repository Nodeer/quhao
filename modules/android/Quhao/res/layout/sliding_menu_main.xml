<?xml version="1.0" encoding="utf-8"?>
<com.jeremyfeinstein.slidingmenu.lib.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slidingmenumain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sliding_menu_bg">
    <LinearLayout android:id="@+id/person_layout"
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        >
        <!-- avatar, nickname and mobile number -->

        <RelativeLayout android:id="@+id/menu_person_info"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:orientation="horizontal" >

            <!-- left avatar -->

            <LinearLayout android:id="@+id/avatar_layout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/menu_user_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/avatar"
                    android:src="@drawable/menu_user_bg" 
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <!-- left avatar -->


			<!-- right nickname and mobile -->
            
            <LinearLayout android:id="@+id/right_layout"
                android:layout_width="20dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:contentDescription="@null"
	                android:src="@drawable/arrow_right" />
            </LinearLayout>
            <!-- right nickname and mobile -->

            <LinearLayout android:id="@+id/info_detail_layout"
                android:layout_toRightOf="@id/avatar_layout"
                android:layout_toLeftOf="@id/right_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip">

                <!-- nickname -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" 
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:text="@string/nick_name_colon"
                        android:textColor="#ff000000"
                        android:gravity="center_vertical"
                        android:layout_marginRight="3dp"
                        android:textSize="14.0sp" />
                    
                    <TextView
                        android:id="@+id/menu_nickName"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:text="@string/empty"
                        android:textColor="#ff000000"
                        android:textSize="14.0sp" />
                </LinearLayout>
                <!-- nickname -->

                <!-- jifen -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" 
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:text="@string/jifen_label_colon"
                        android:textColor="#ff000000"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/menu_jifen"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="3.0dip"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:text="@string/jifen_default"
                        android:textColor="#ff000000"
                        android:textSize="16.0sp" />
                </LinearLayout>
                <!-- jifen -->

            </LinearLayout>
            
        </RelativeLayout>
        
        <RelativeLayout android:id="@+id/menu_person_info_login"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:orientation="horizontal" >

            <LinearLayout android:id="@+id/avatar_layout_logout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:gravity="center" >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/avatar"
                    android:src="@drawable/menu_user_bg" 
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/right_layout_logout"
                android:layout_width="30dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8.0dip">

                <ImageView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:contentDescription="@null"
	                android:src="@drawable/arrow_right" />
            </LinearLayout>

            <LinearLayout 
                android:layout_toRightOf="@id/avatar_layout_logout"
                android:layout_toLeftOf="@id/right_layout_logout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip"
                android:paddingTop="8.0dip">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="0.0dip"
                    android:orientation="horizontal" >
					
                    <Button android:id="@+id/menu_login"
                        android:layout_height="40dp"
                        android:layout_width="wrap_content"
                        android:contentDescription="@null"
                        android:text="立即登录"
                        android:background="@drawable/btn_background_red"
                        android:textColor="@color/white"
                        android:textSize="17sp"/>
                    
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.0dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.0dip"
                        android:singleLine="true"
                        android:text="@string/no_register_tip"
                        android:textColor="#ff000000"
                        android:textSize="16.0sp" />

                    <TextView
                        android:id="@+id/menu_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3.0dip"
                        android:layout_marginLeft="3dp"
                        android:singleLine="true"
                        android:textColor="@color/red_text"
                        android:text="@string/link_register"
                        android:textSize="16.0sp" />
                </LinearLayout>

            </LinearLayout>
            
        </RelativeLayout>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/home_layout"
        android:layout_height="80dip"
        android:layout_width="300dp"
        android:layout_below="@id/person_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/slding_menu_home"/>
        <TextView 
            android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textSize="20sp"
	        android:textColor="@color/white"
	        android:text="首页"/>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/nearby_layout"
        android:layout_height="80dip"
        android:layout_width="300dp"
        android:layout_below="@id/home_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/slding_menu_nearby"/>
        <TextView 
            android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textSize="20sp"
	        android:textColor="@color/white"
	        android:text="周边美食"/>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/more_layout"
        android:layout_height="80dip"
        android:layout_width="300dp"
        android:layout_below="@id/nearby_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/slding_menu_more"/>
        <TextView 
            android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textSize="20sp"
	        android:textColor="@color/white"
	        android:text="设置"/>
    </LinearLayout>
    
</com.jeremyfeinstein.slidingmenu.lib.SlidingMenu>
