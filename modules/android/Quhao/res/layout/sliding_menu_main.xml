<?xml version="1.0" encoding="utf-8"?>
<com.jeremyfeinstein.slidingmenu.lib.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slidingmenumain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sliding_menu_bg">
    <LinearLayout android:id="@+id/person_layout"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >
        <!-- avatar, nickname and mobile number -->

        <RelativeLayout android:id="@+id/menu_person_info"
            android:layout_width="fill_parent"
            android:layout_height="150dp">

            <!-- left avatar -->

            <LinearLayout android:id="@+id/avatar_layout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/menu_user_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/avatar"
                    android:src="@drawable/menu_user_bg" 
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <!-- left avatar -->

            <LinearLayout android:id="@+id/info_detail_layout"
                android:layout_below="@id/avatar_layout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="10.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/nick_name_colon"
                    android:textColor="#ff000000"
                    android:layout_marginRight="3dp"
                    android:textSize="14.0sp" />
                
                <TextView
                    android:id="@+id/menu_nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/empty"
                    android:textColor="#ff000000"
                    android:textSize="14.0sp" />
                <!-- nickname -->
            </LinearLayout>
            
        </RelativeLayout>
        
        <RelativeLayout android:id="@+id/menu_person_info_login"
            android:layout_width="fill_parent"
            android:layout_height="120dp" >

            <LinearLayout android:id="@+id/avatar_layout_logout"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center" >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/avatar"
                    android:src="@drawable/menu_user_bg" 
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <LinearLayout 
                android:layout_below="@id/avatar_layout_logout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:singleLine="true"
                    android:text="未登录"
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />

            </LinearLayout>
            
        </RelativeLayout>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/home_layout"
        android:layout_height="80dip"
        android:layout_width="200dp"
        android:layout_below="@id/person_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/slding_menu_home"/>
        <TextView 
            android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textSize="20sp"
	        android:textColor="@color/white"
	        android:text="首页"/>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/nearby_layout"
        android:layout_height="80dip"
        android:layout_width="200dp"
        android:layout_below="@id/home_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/slding_menu_nearby"/>
        <TextView 
            android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textSize="20sp"
	        android:textColor="@color/white"
	        android:text="周边美食"/>
    </LinearLayout>
    
    <LinearLayout android:id="@+id/more_layout"
        android:layout_height="80dip"
        android:layout_width="200dp"
        android:layout_below="@id/nearby_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/slding_menu_more"/>
        <TextView 
            android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textSize="20sp"
	        android:textColor="@color/white"
	        android:text="设置"/>
    </LinearLayout>
    
</com.jeremyfeinstein.slidingmenu.lib.SlidingMenu>
