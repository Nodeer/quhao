<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/menuBar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="horizontal"
     >
	<Button android:id="@+id/btnMerchantList" android:layout_height="wrap_content" 
	    android:layout_width="wrap_content" android:layout_weight="1"
	    android:text="商家列表"/>
	<Button android:id="@+id/btnNear" android:layout_height="wrap_content" 
	    android:layout_width="wrap_content" android:layout_weight="1"
	    android:text="附近商家"/>
	<Button android:id="@+id/btnPerson" android:layout_height="wrap_content" 
	    android:layout_width="wrap_content" android:layout_weight="1"
	    android:text="个人中心"/>
</LinearLayout>