<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomGridView" parent="@android:style/Widget.AbsListView">
        <item name="android:listSelector">@drawable/grid_selector_background</item>
    </style>
    <style name="DialogWindowTitle">
		<item name="android:maxLines">0</item>
		<item name="android:scrollHorizontally">true</item>
	</style>
	<style name="commentRatingBar" parent="@android:style/Widget.RatingBar">
		<item name="android:progressDrawable">@drawable/comment_rating_bar</item>
		<item name="android:minHeight">32dip</item>
		<item name="android:maxHeight">32dip</item>
	</style>
	<style name="PopupWindowAnimation">  
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>  
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>  
    </style>
</resources>