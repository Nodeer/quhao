# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Press

*		/									module:press
GET     /                     		  		LandingController.index

# Accounts
GET		/accounts							rsecure.Secure.accounts
GET		/signup								AccountController.signup
GET		/login								AccountController.login

# Login / Logout
GET		/resetpwd					  		rsecure.Secure.resetpwd
POST	/resetpwd					  		rsecure.Secure.resetpwd
GET		/resetpasswordbyemail		  		rsecure.Secure.resetPasswordByEmail
POST	/resetpasswordbyemail		  		rsecure.Secure.resetPasswordByEmail
GET     /home        			      		HomeController.home

# Sign-up
*		/p/{action}							Patches.{action}
GET		/p        							Patches.index

# Ignore favicon requests
GET     /favicon.ico                        staticFile:public/images/applyful_favicon.gif

# Map static resources from the /app/public folder to the /public path
GET     /public/                            staticDir:public

#Image
*		/imgs								ImageController.loadImage

# Catch all
*       /{controller}/{action}              {controller}.{action}