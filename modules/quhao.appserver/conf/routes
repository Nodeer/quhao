# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Press
*		/									module:press

# Ignore favicon request
GET     /favicon.ico                        staticFile:public/images/applyful_favicon.gif

GET     /                     		  		LandingController.index

# Routes for Android & IOS clients
# Routes for Android & IOS clients

# Category
GET		/allCategories						MerchantController.allCategories

# Category
GET		/merchantByCategory					MerchantController.merchantByCategory

# Accounts
GET		/accounts							rsecure.Secure.accounts
GET		/signup								AccountController.signup
GET		/login								AccountController.login

# Patch
*		/p/{action}							Patches.{action}
GET		/p        							Patches.index


# Map static resources from the /app/public folder to the /public path
GET     /public/                            staticDir:public

#Image
*		/imgs								ImageController.loadImage

# Catch all
*       /{controller}/{action}              {controller}.{action}